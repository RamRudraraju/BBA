<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kittu.bba.SportEvents">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000FFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/Sport" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000FFF"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:id="@+id/sportField" />

    <ImageView

        android:id="@+id/sportImage"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@+id/sportField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="Match Details:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000FFF"
        android:layout_below="@+id/sportImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/textView5" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/Sport"
        android:textColor="#000000"
        android:layout_alignStart="@+id/Sport"
        android:layout_marginTop="25dp"
        android:id="@+id/sportDetails" />

    <TextView
        android:text="Time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sportDetails"
        android:textColor="#000FFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView10" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/sportDetails"
        android:layout_alignStart="@+id/sportDetails"
        android:layout_marginTop="18dp"
        android:id="@+id/sportTime" />


</RelativeLayout>
